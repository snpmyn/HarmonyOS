<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:secondAbilitySliceTv"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_ability_second_text"
        ohos:text_size="12vp"/>

    <Button
        ohos:id="$+id:secondAbilitySliceBtn"
        ohos:height="36vp"
        ohos:width="80vp"
        ohos:background_element="$graphic:background_ability_main_button"
        ohos:text="$string:secondability_GoBack"
        ohos:text_size="6vp"
        ohos:top_margin="12vp"/>
</DirectionalLayout>