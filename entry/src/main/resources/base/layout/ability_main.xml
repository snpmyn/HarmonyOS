<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:mainAbilitySliceTv"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_ability_main_text"
        ohos:text="$string:mainability_HelloWorld"
        ohos:text_size="12vp"/>

    <DirectionalLayout
        ohos:height="36vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:top_margin="12vp">

        <Button
            ohos:id="$+id:mainAbilitySliceBtnJumpWithinAbilitySlice"
            ohos:height="match_parent"
            ohos:width="80vp"
            ohos:background_element="$graphic:background_ability_main_button"
            ohos:right_margin="12vp"
            ohos:text="$string:mainability_jumpWithinAbilitySlice"
            ohos:text_size="6vp"/>

        <Button
            ohos:id="$+id:mainAbilitySliceBtnJumpBetweenPage"
            ohos:height="match_parent"
            ohos:width="80vp"
            ohos:background_element="$graphic:background_ability_main_button"
            ohos:text="$string:mainability_jumpBetweenPage"
            ohos:text_size="6vp"/>
    </DirectionalLayout>
</DirectionalLayout>